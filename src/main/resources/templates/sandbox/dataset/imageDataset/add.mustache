}

//이미지 관리 페이지 이동
const jsList = function(){
	location.href = '/sandbox/dataset/imageDataset/list';
}

//값 셋팅
const selClick = function(file_index, file_cnt){
	$('#file_index').val(file_index);
	$('#file_cnt').val(file_cnt);
}

