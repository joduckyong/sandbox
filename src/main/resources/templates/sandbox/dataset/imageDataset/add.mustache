	$('#dtl_code_nm').val(dtl_code_nm+" 데이터");
	$('#dtl_code').val(dtl_code);
	
	imageDatasetsDetailList(init_page, init_size_per_page);
	$('#add_modal').modal('show');
}

//모달 닫기
const closeModal = function(){
