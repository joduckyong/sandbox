<script>
const commonUrl = '/sandbox/common';
const url = '/sandbox/model/modelAnalysisModel';

let init_page = 1;				//초기 페이지
let page = 1;					//페이지
let init_size_per_page = 10;	//초기 개수
let size_per_page = 10;	 		//가져올 개수
let pageCount = 10;		 		//페이징에 나타낼 페이지 수

//분석 모델 기본정보 목록 조회
const analysisModels = function (page, size_per_page) {
	
	if(!page){
		page = init_page;
	}
	if(!size_per_page){
		size_per_page = init_size_per_page;
	}	
	
	let query = isEmpty($("#query").val());
	let anals_use_prpos_cd = isEmpty($("#anals_use_prpos_cd").val());
	
	const data = {
   		url: '/services/sandbox/analysis-models/B04002/get?search=analsModelNm:'+query+',analsUsePrposCd:'+anals_use_prpos_cd+'&page_current='+page+'&size_per_page='+size_per_page+'&sort=creatDatetime:desc',
   		user_id: 'user00',	
   		menu_id: 'menu_id',
    };		
    $.ajax({
        type: 'POST',
        url: url+'/analysisModels',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
	  	  if (data != null) {
	  		$("#analysisModels").empty();
  	    	$("#total_count").text(data.total_count);
  	    	
  	    	if(data.contents != ""){
  	    		let insertTr = '';
		  	    $.each(data.contents, function (idx, el) {
		  	    	
					insertTr += "<tr>";
					insertTr += '	<td><input type="checkbox" name="anals_model_bass_id" value="'+el.anals_model_id+'"></td>';
					insertTr += ' <td><span class="blue bold" style="cursor:pointer" onclick=analysisModelsDetail('+el.anals_model_id+');>'+el.anals_model_nm+'</span></td>';
					insertTr += ' <td>'+el.anals_model_desc+'</td>';
					insertTr += ' <td>'+el.anals_use_prpos_cd_nm+'</td>';
					insertTr += ' <td>'+el.use_yn+'</td>';
					insertTr += ' <td>'+el.creator_id+'</td>';
					insertTr += ' <td>'+el.creat_datetime+'</td>';
					insertTr += ' <td>'+el.modify_datetime+'</td>';
					insertTr += '</tr>';
		  	    });
		  	  	$("#analysisModels").html(insertTr);
  	    	}
  	    	//페이징 보여줌
  	    	paging(data.total_count, size_per_page, pageCount, page);
	  	  }
    	  
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

//분석 모델 상세 조회
const analysisModelsDetail = function (anals_model_id) {
	
	const data = {
   		url: '/services/sandbox/analysis-models/B04002/'+anals_model_id+'/detail',
   		user_id: 'user00',	
   		menu_id: 'menu_id',
    };		
    $.ajax({
        type: 'POST',
        url: url+'/analysisModelsDetail',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
	  	  if (data != null) {
	  		$("#file_infos").empty();
	  		$("#basic_infos").empty();
	  	    	if(data.contents != ""){
	  	    		$("#anals_model_nm").text(JSON.stringify(data.contents.anals_model_nm).replace(/\"/gi, ''));
	  	    		$("#anals_model_desc").text(JSON.stringify(data.contents.anals_model_desc).replace(/\"/gi, ''));
	  	    		
	  	    		$.each(data.contents.file_infos, function (idx, el) {
	  	    			let insertTr = "<tr>";
	  	    				insertTr += '	<td>'+el.file_nm+'</td>';
	  	    				insertTr += '	<td></td>';
	  	    				insertTr += '</tr>';
	  	    				$("#file_infos").append(insertTr);
	  	    		});
	  	    		
	  	    		$.each(data.contents.basic_infos, function (idx, el) {
	  	    			let insertTr = "<tr>";
	  	    				insertTr += '	<td>'+el.anals_model_stage+'</td>';
	  	    				insertTr += '	<td>'+el.anals_model_dfn+'</td>';
	  	    				insertTr += '	<td>'+el.anals_model_desc+'</td>';
	  	    				insertTr += '</tr>';
	  	    				$("#basic_infos").append(insertTr);
	  	    		});
	  	    		
	  	    	}  		
	  	  }
    	  
	  	detailModal();
	  	
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

//분석_사용_용도_코드
const commonCodeAnalysisUsePurpose = function (){
	const data = {
       		url: '/services/sandbox/common-code/analysis-usage',
        };		
        $.ajax({
            type: 'POST',
            url: commonUrl+'/commonCodeAnalysisUsePurpose',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify(data)
        }).done(function (data) {
 		  	if (data != null) {
 		  	   	if(data.contents != ""){    	    	
					 $("#anals_use_prpos_cd").empty();
    				 let selOp = '<option value="">전체</option>';  
	    	   		 $.each(data.contents, function (idx, el) {
  	    					selOp += '<option value='+el.dtl_code+'>' + el.dtl_code_nm + '</option>';
	 	     	     });
		 	     	 $("#anals_use_prpos_cd").append(selOp);        	
 		  	   	}
 		  	}
        }).fail(function (error) {
            alert(JSON.stringify(error));
        });		
}

//분석 모델 삭제
const analysisModelsDelete = function (anals_model_id) {
	return new Promise(function(resolve, reject){
		const data = {
	   		url: '/services/sandbox/analysis-models/B04002/'+anals_model_id+'/delete',
	   		user_id: 'user00',	
	   		menu_id: 'menu_id',
	    };		
	    $.ajax({
	        type: 'POST',
	        url: url+'/analysisModelsDelete',
	        dataType: 'json',
	        contentType: 'application/json; charset=utf-8',
	        data: JSON.stringify(data)
	    }).done(function (data) {
// 	  		let message = JSON.stringify(data.return_msg);
// 	  		console.log(message.replace(/\"/gi, ''));
			resolve();
	    }).fail(function (error) {
	        alert(JSON.stringify(error));
	    });
	});
}

//삭제버튼
const btnDel = async function(){
	
    if(confirm('삭제하시겠습니까?')) {
    	if($("input[name='anals_model_bass_id']:checked").length < 1) {
            alert('선택 항목이 없습니다.');
            return;
        }

        let tasks = new Array();
    	let chk_arr = $("input[name='anals_model_bass_id']:checked");
        for( var i=0; i<chk_arr.length; i++ ) {
        	tasks.push(chk_arr[i].value);
        }
    	
    	const taskPromises = tasks.map(task => analysisModelsDelete(task));
    	const result = await Promise.all(taskPromises).then(function(data){
    		alert("삭제되었습니다.");
    	});
        
    	analysisModels(page, size_per_page);
    }
}

//모달 상세정보
const detailModal = function(){
	$('#modelLabel').text('데이터 분석 모델 상세 정보');
	$('#add_modal').modal('show');
}

//모달 닫기
const closeModal = function(){
	$('#add_modal').modal('hide');
}

//분석 모델 관리 - 데이터 분석 모델 등록 페이지 이동
const btnSave = function(){
	location.href = '/sandbox/model/modelAnalysisModel/add';
}

//분석 모델 관리 - 데이터 분석 모델 수정 페이지 이동
const btnUpdate = function(){
	if($("input[name='anals_model_bass_id']:checked").length < 1) {
        alert('선택 항목이 없습니다.');
        return;
    }else if($("input[name='anals_model_bass_id']:checked").length > 1) {
    	alert('1개 항목만 선택하세요.');
        return;
    }
	
	let anals_model_id = $("input[name='anals_model_bass_id']:checked").val();
	
	location.href = '/sandbox/model/modelAnalysisModel/update/'+anals_model_id;
}

//분석 모델 관리 - 데이터 분석 모델 목록 페이지 이동
const jsList = function(){
	
	location.href = '/sandbox/model/modelAnalysisModel/list';
}

//페이징 함수 호출
const pagingFun = function(page, size_per_page){
	analysisModels(page, size_per_page);
}

//엔터키가 눌렸을 때
const enterkey = function(e) {
	if (e.keyCode == 13) {
		analysisModels();
    }
}

//조회
analysisModels();
//공통코드
commonCodeAnalysisUsePurpose();
</script>

