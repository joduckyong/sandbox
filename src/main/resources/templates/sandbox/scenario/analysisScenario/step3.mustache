        <input type="hidden" name="model_setup_status_cd" id="model_setup_status_cd"/>
        <input type="hidden" name="pretreat_status_cd" id="pretreat_status_cd"/>
        <input type="hidden" name="target_setup_status_cd" id="target_setup_status_cd"/>
        <input type="hidden" name="last_status_cd" id="last_status_cd"/>
        
{{>layout/footer}}        

<script>
const commonUrl = '/sandbox/common';
const url = '/sandbox/scenario/analysisScenario';

const progressCd1 = 'B03001';	//등록 중
const progressCd2 = 'B03002';	//등록 완료

$(document).ready(function(){
	if($("#regst_status_cd").val() != progressCd2){
		alert("시나리오 작성이 완료되지 않았습니다. 시나리오 작성 페이지로 이동합니다.");
		jsNext(1);
		return;
	}
	
	if($("#model_setup_status_cd").val() != progressCd2){
		alert("분석모델 설정이 완료되지 않았습니다. 분석모델 설정 페이지로 이동합니다.");
		jsNext(2);
		return;
	}
	
	progressBar();
});

//시나리오 등록 단계별 상태
const scenarioEnrollStepStatus = function (){
	let scenario_id = '{{scenario_id}}';
	if(!scenario_id){
		return;
	}
	
	const data = {
   		url: '/services/sandbox/scenarios/'+scenario_id+'/enroll-status',
   		user_id: 'user00',	
   		menu_id: 'menu_id',
    };
	
	$.ajax({
        type: 'POST',
        url: url+'/scenarioEnrollStepStatus',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data),
        async: false,
    }).done(function (data) {
    	
    	 if (data != null) {
   	    	
   	    	if(data.contents != ""){
   	    		$("#regst_status_cd").val(data.contents.regst_status_cd);
   	    		$("#model_setup_status_cd").val(data.contents.model_setup_status_cd);
   	    		$("#pretreat_status_cd").val(data.contents.pretreat_status_cd);
   	    		$("#target_setup_status_cd").val(data.contents.target_setup_status_cd);
   	    		$("#last_status_cd").val(data.contents.last_status_cd);
   	    	}
    	 }
  		
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

//시나리오 등록 > 전처리 모델 조회
const scenarioPretreatModelsGet = function (analsModelId) {
	
	let anals_model_id = analsModelId ? analsModelId : '';
	let anals_use_prpos_cd = '{{anals_use_prpos_cd}}';
	let query = isEmpty($("#query").val());
	
	if(query == '' && anals_model_id == '') {
        alert('전처리 모델명을 입력하세요!');
        $("#query").focus();
        return;
    }
	
	const data = {
   		url: '/services/sandbox/'+anals_use_prpos_cd+'/scenarios/analysis-models/B04001/get?search=anals_model_id:'+anals_model_id+',anals_model_nm:'+query+'&sort=creatDatetime:desc',
   		user_id: 'user00',	
   		menu_id: 'menu_id',
    };		
    $.ajax({
        type: 'POST',
        url: url+'/scenarioPretreatModelsGet',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
	  	  if (data != null) {
	  		$("#pretreatModel").empty();
	  		$("#file_infos").empty();
	  		$("#parameter_infos").empty();
  	    	
  	    	if(data.contents != ""){
  	    		let insertTr = '';
		  	    $.each(data.contents, function (idx, el) {
		  	    	if(anals_model_id == el.anals_model_id){	//상세 조회
		  	    		insertTr += '<tr>';
						insertTr += ' <td><input type="radio" name="anals_model_id" onclick="scenarioPretreatModelsDetail('+el.anals_model_id+');" value="'+el.anals_model_id+'" checked></td>';
						insertTr += ' <td>'+el.anals_model_nm+'</td>';
						insertTr += ' <td>'+el.anals_model_desc+'</td>';
						insertTr += '</tr>';
						return false;
		  	    	}else{
		  	    		insertTr += '<tr>';
						insertTr += ' <td><input type="radio" name="anals_model_id" onclick="scenarioPretreatModelsDetail('+el.anals_model_id+');" value="'+el.anals_model_id+'"></td>';
						insertTr += ' <td>'+el.anals_model_nm+'</td>';
						insertTr += ' <td>'+el.anals_model_desc+'</td>';
						insertTr += '</tr>';
		  	    	}
		  	    });
		  	  $("#pretreatModel").html(insertTr);
  	    	}
	  	  }
    	  
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

//시나리오 등록 > 전처리 모델 설정 상세 조회
const scenarioPretreatModelSetupDetail = function () {
	return new Promise(function(resolve, reject){
		let scenario_id = '{{scenario_id}}';
		
		const data = {
	   		url: '/services/sandbox/scenarios/'+scenario_id+'/analysis-models/B04001/get',
	   		user_id: 'user00',	
	   		menu_id: 'menu_id',
	    };		
	    $.ajax({
	        type: 'POST',
	        url: url+'/scenarioPretreatModelSetupDetail',
	        dataType: 'json',
	        contentType: 'application/json; charset=utf-8',
	        data: JSON.stringify(data)
	    }).done(function (data) {
	    	resolve(data);
	    }).fail(function (error) {
	        alert(JSON.stringify(error));
	        reject(error);
	    });	
	});
}

//시나리오 등록 > 전처리 모델 상세 조회
const scenarioPretreatModelsDetail = function (anals_model_id) {
	
	let anals_use_prpos_cd = '{{anals_use_prpos_cd}}';
	
	const data = {
   		url: '/services/sandbox/'+anals_use_prpos_cd+'/scenarios/analysis-models/B04001/'+anals_model_id+'/detail',
   		user_id: 'user00',	
   		menu_id: 'menu_id',
    };		
    $.ajax({
        type: 'POST',
        url: url+'/scenarioPretreatModelsDetail',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
	  	  if (data != null) {
  	    	
  	    	if(data.contents != ""){
  	    		let fileInfoTr = '';
  	   	   		 $.each(data.contents.file_infos, function (idx, el) {
  	   	   			if(el != null){
	  		   	   		fileInfoTr += '<tr>';
	  		   	 		fileInfoTr += '	<td>'+el.file_nm+'</td>';
	  		   			fileInfoTr += '	<td>'+el.creat_datetime+'</td>';
	  		   			fileInfoTr += '</tr>';
  	   	   			}
  	     	     });
  	   	   		 
  	   	   		let parameterInfosTr = '';
  	   	   		$.each(data.contents.parameter_infos, function (idx, el) {
	   	   			if(el != null){
	   	   			parameterInfosTr += '<tr>';
	   	   			parameterInfosTr += '	<td>'+el.anals_model_stage+'</td>';
	   	   			parameterInfosTr += '	<td>'+el.anals_model_dfn+'</td>';
	   	 			parameterInfosTr += '	<td>'+el.anals_model_desc+'</td>';
	   				parameterInfosTr += '</tr>';
	   	   			}
	     	     });
  	   	   		
		  	  	$("#file_infos").html(fileInfoTr);
		  		$("#parameter_infos").html(parameterInfosTr);
  	    	}
	  	  }
    	  
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

//분석 모델 설정 임시저장 & 저장 & 수정
const scenarioPretreatModelSetupUpdate = function(type){
	let anals_use_prpos_cd = '{{anals_use_prpos_cd}}';
	let scenario_id = '{{scenario_id}}';
	let anals_model_id = $('input:radio[name="anals_model_id"]:checked').val();
	
	if(!anals_model_id){
		alert('전처리 모델을 선택하세요!');
        return;	
	}
	
	let regstCd = '';
	let confirmMsg = '';
	if(type == 'T'){	//임시 저장
		regstCd = progressCd1;	//등록 중
		confirmMsg = '임시저장 하시겠습니까?';
	}else {		//다음
		regstCd = progressCd2;	//등록 완료
		confirmMsg = '저장 후 다음으로 이동하시겠습니까?';
	}
	
	const data = {
   		url: '/services/sandbox/'+anals_use_prpos_cd+'/scenarios/'+scenario_id+'/analysis-models/B04001/update',
   		user_id: 'user00',	
   		menu_id: 'menu_id',
   		modifier_id: "modifier",
   		pretreat_id: anals_model_id,
   		pretreat_status_cd: regstCd
    };
	
	if(confirm(confirmMsg)){
	    $.ajax({
	        type: 'POST',
	        url: url+'/scenarioPretreatModelSetupUpdate',
	        dataType: 'json',
	        contentType: 'application/json; charset=utf-8',
	        data: JSON.stringify(data)
	    }).done(function (data) {
	    	let message = JSON.stringify(data.return_msg);
// 	  		alert(message.replace(/\"/gi, ''));
			alert("저장 되었습니다.");
	  		if(type == 'T'){	//임시저장
	  			jsNext(3, scenario_id);
	  		}else{	//다음
	  			jsNext(4, scenario_id);
	  		}    	  
	    }).fail(function (error) {
	        alert(JSON.stringify(error));
	    });	
	}
}

//임시저장 & 이전/다음 단계 이동
const jsNext = function(step){
	let anals_use_prpos_cd = '{{anals_use_prpos_cd}}';
	let scenario_id = '{{scenario_id}}';
	let anals_detail_setting_cd = '{{anals_detail_setting_cd}}';
	if(step == 1){
		location.href='/sandbox/scenario/analysisScenario/step1/'+scenario_id;
	}else if(step == 2){
		location.href='/sandbox/scenario/analysisScenario/step2/'+anals_detail_setting_cd+'/'+anals_use_prpos_cd+'/'+scenario_id;
	}else if(step == 3){
		location.href='/sandbox/scenario/analysisScenario/step3/'+anals_detail_setting_cd+'/'+anals_use_prpos_cd+'/'+scenario_id;
	}else{
		location.href='/sandbox/scenario/analysisScenario/step4/'+anals_detail_setting_cd+'/'+anals_use_prpos_cd+'/'+scenario_id;
	}
}

//진행상태 표시 바
const progressBar = function(){
	let regst_status_cd = $("#regst_status_cd").val();
	let model_setup_status_cd = $("#model_setup_status_cd").val();
	let pretreat_status_cd = $("#pretreat_status_cd").val();
	let target_setup_status_cd = $("#target_setup_status_cd").val();
	
	if(regst_status_cd == progressCd1){
		$("#ps1").addClass("temporary_storage");
	}else if(regst_status_cd == progressCd2){
		$("#ps1").addClass("save");
	}
	
	if(model_setup_status_cd == progressCd1){
		$("#ps2").addClass("temporary_storage");
	}else if(model_setup_status_cd == progressCd2){
		$("#ps2").addClass("save");
	}
	
	if(pretreat_status_cd == progressCd1){
		$("#ps3").addClass("temporary_storage");
	}else{
		$("#ps3").addClass("now_depth");
	}
	
	if(target_setup_status_cd == progressCd1){
		$("#ps4").addClass("temporary_storage");
	}else if(target_setup_status_cd == progressCd2){
		$("#ps4").addClass("save");
	}
}

//분석 시나리오 목록 페이지 이동
const jsList = function(){
	location.href = '/sandbox/scenario/analysisScenario/list';
}

scenarioPretreatModelSetupDetail()
.then(function(data){
	if(data != null){
		if(data.contents != ""){
			scenarioPretreatModelsGet(data.contents.pretreat_id);
			scenarioPretreatModelsDetail(data.contents.pretreat_id);
		}
	}
	
})
.catch(function(error){
	console.log(error)
});

//엔터키가 눌렸을 때
const enterkey = function(e) {
	if (e.keyCode == 13) {
		scenarioPretreatModelsGet();
    }
}

//시나리오 등록 단계별 상태
scenarioEnrollStepStatus();
</script>

